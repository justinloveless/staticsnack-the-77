{
  "version": "1.0",
  "description": "Band website assets configuration",
  "assets": [
    {
      "path": "content/band-config.json",
      "type": "json",
      "label": "Band Configuration",
      "description": "Band name, tagline, and general configuration",
      "handler": "handlers/band-config.js",
      "maxSize": 5120,
      "allowedExtensions": [
        ".json"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "bandName": {
            "type": "string"
          },
          "tagline": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "bandName",
          "tagline",
          "description"
        ]
      }
    },
    {
      "path": "content/hero.json",
      "type": "json",
      "label": "Hero Section",
      "description": "Hero section title, subtitle, and video URL",
      "handler": "handlers/hero.js",
      "maxSize": 2048,
      "allowedExtensions": [
        ".json"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "subtitle": {
            "type": "string"
          },
          "videoUrl": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "title",
          "subtitle",
          "videoUrl"
        ]
      }
    },
    {
      "path": "content/about.json",
      "type": "json",
      "label": "About Band",
      "description": "Band description, story, and achievements",
      "handler": "handlers/about.js",
      "maxSize": 10240,
      "allowedExtensions": [
        ".json"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string"
          },
          "story": {
            "type": "string"
          },
          "achievements": {
            "type": "array",
            "items": {}
          }
        },
        "required": [
          "image",
          "description",
          "story",
          "achievements"
        ]
      }
    },
    {
      "path": "content/members.json",
      "type": "json",
      "label": "Band Members",
      "description": "Information about each band member",
      "handler": "handlers/members.js",
      "maxSize": 20480,
      "allowedExtensions": [
        ".json"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "members": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "role": {
                  "type": "string"
                },
                "bio": {
                  "type": "string",
                  "multiline": true
                },
                "image": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": [
                "name",
                "role",
                "bio",
                "image"
              ]
            }
          }
        },
        "required": [
          "members"
        ]
      }
    },
    {
      "path": "content/gigs",
      "type": "directory",
      "label": "Upcoming Gigs",
      "description": "Calendar of upcoming shows and performances",
      "handler": "handlers/gigs.js",
      "contains": {
        "type": "combo",
        "parts": [
          {
            "assetType": "event",
            "allowedExtensions": [".ics"]
          },
          {
            "assetType": "json",
            "allowedExtensions": [".json"]
          }
        ]
      },
      "maxSize": 20480,
      "schema": {
        "type": "object",
        "properties": {
          "event": {
            "type": "string",
            "description": "iCalendar event data"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "venue": {
                "type": "string"
              },
              "ticketUrl": {
                "type": "string",
                "format": "uri"
              },
              "featured": {
                "type": "boolean"
              }
            },
            "required": [
              "venue",
              "ticketUrl"
            ]
          }
        }
      }
    },
    {
      "path": "content/merch.json",
      "type": "json",
      "label": "Merchandise",
      "description": "Band merchandise items",
      "handler": "handlers/merch.js",
      "maxSize": 20480,
      "allowedExtensions": [
        ".json"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "price": {
                  "type": "string"
                },
                "image": {
                  "type": "string",
                  "format": "uri"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "price",
                "image",
                "description"
              ]
            }
          }
        },
        "required": [
          "items"
        ]
      }
    },
    {
      "path": "content/music-platforms.json",
      "type": "json",
      "label": "Music Platforms",
      "description": "Links to music streaming platforms",
      "handler": "handlers/music-platforms.js",
      "maxSize": 5120,
      "allowedExtensions": [
        ".json"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "platforms": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                },
                "icon": {
                  "type": "string"
                },
                "color": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "url",
                "icon",
                "color"
              ]
            }
          }
        },
        "required": [
          "platforms"
        ]
      }
    },
    {
      "path": "content/social.json",
      "type": "json",
      "label": "Social Links",
      "description": "Social media links for the band",
      "handler": "handlers/social.js",
      "maxSize": 5120,
      "allowedExtensions": [
        ".json"
      ],
      "schema": {
        "type": "object",
        "properties": {
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "platform": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                },
                "icon": {
                  "type": "string"
                }
              },
              "required": [
                "platform",
                "url",
                "icon"
              ]
            }
          }
        },
        "required": [
          "links"
        ]
      }
    }
  ]
}